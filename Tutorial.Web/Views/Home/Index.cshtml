@model HomeIndexViewModel
@{
    ViewBag.Title = "Welcome to Tutorial";
}

<partial name="_StudentTable" for="@Model.Student" />

<input type="hidden" id="JumpUrl" value="@Model.Student.FirstOrDefault().Name" />

<script type="text/javascript" src="https://b.bdstatic.com/searchbox/icms/searchbox/js/swan-2.0.12.js"></script>
<script type="text/javascript">
        var BDrefid = getCookie('17uCNRefId');
        var BDSecureToken = getCookie('SecureToken');
        if (BDrefid == '532176916' && (BDSecureToken == null || BDSecureToken == '')) {
            debugger;
            console.log('@Model.Student.FirstOrDefault().Name.ToString()');
            console.log(BDrefid, BDSecureToken);
            swan.webView.navigateTo({
                url: '/pages/login/login?sceneryReturnUrl=' + '@Model.Student.FirstOrDefault().Name.ToString()'
            });
        }
        function getCookie(name) {
            var arr, reg = new RegExp("(^| )" + name + "=([^;]*)(;|$)");
            if (arr = document.cookie.match(reg))
                return unescape(arr[2]);
            else
                return null;
        }
</script>

@section bottom
{
    <div>
        <a role="button" class="btn btn-primary" asp-action="Create" asp-controller="Home">Create a Student</a>
    </div>
}
