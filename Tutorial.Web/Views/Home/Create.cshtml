@model StudentCreateViewModel
    <form method="post">
        <div class="form-group row">
            <label for="id" class="col-sm-2 col-form-label">FirstName</label>
            <div class="col-sm-10">
                <input asp-for="FirstName" type="text" class="form-control" placeholder="FirstName">
                <span asp-validation-for="FirstName"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="id" class="col-sm-2 col-form-label">LastName</label>
            <div class="col-sm-10">
                <input asp-for="LastName" type="text" class="form-control" placeholder="LastName">
                <span asp-validation-for="LastName"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="id" class="col-sm-2 col-form-label">BirthDay</label>
            <div class="col-sm-10">
                <input asp-for="BirthDay" type="date" class="form-control" placeholder="BirthDay">
                <span asp-validation-for="BirthDay"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="id" class="col-sm-2 col-form-label">Gender</label>
            <div class="col-sm-10">
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                <span asp-validation-for="Gender"></span>
            </div>
        </div>
        <button class="btn btn-warning" type="submit" name="save">Create</button>
        <a role="button" class="btn btn-primary" asp-action="Index">Cancel</a>
    </form>
